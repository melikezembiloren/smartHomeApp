<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/color_gradient_grey"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StoreActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageViewTv"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_television"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.099"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.225">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="@string/store_tv"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.125"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shapeableImageViewTv"
                        app:layout_constraintVertical_bias="0.28">

                    </TextView>

                    <Button
                        android:id="@+id/buyNowButtonTv"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/black"
                        android:drawableLeft="@drawable/icon_shopping_cart"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/buy_now"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.786"
                        app:layout_constraintStart_toEndOf="@+id/shapeableImageViewTv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.342">

                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageViewWhiteGoods"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_white_goods"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.099"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.225">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="@string/store_white_goods"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.125"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shapeableImageViewWhiteGoods"
                        app:layout_constraintVertical_bias="0.28">

                    </TextView>

                    <Button
                        android:id="@+id/buyNowButtonWhiteGoods"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/black"
                        android:drawableLeft="@drawable/icon_shopping_cart"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/buy_now"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.786"
                        app:layout_constraintStart_toEndOf="@+id/shapeableImageViewWhiteGoods"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.342">

                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="376dp"
                    android:layout_height="match_parent">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageViewSmallAppliances"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_coffee_maker"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.099"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.225">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="@string/store_small_appliances"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.125"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shapeableImageViewSmallAppliances"
                        app:layout_constraintVertical_bias="0.28">

                    </TextView>

                    <Button
                        android:id="@+id/buyNowButtonSmallAppliances"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/black"
                        android:drawableLeft="@drawable/icon_shopping_cart"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/buy_now"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.786"
                        app:layout_constraintStart_toEndOf="@id/shapeableImageViewSmallAppliances"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.342">

                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageViewHeater"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_heater"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.099"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.225">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="@string/store_heaters"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shapeableImageViewHeater"
                        app:layout_constraintVertical_bias="0.48">

                    </TextView>

                    <Button
                        android:id="@+id/buyNowButtonHeaters"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/black"
                        android:drawableLeft="@drawable/icon_shopping_cart"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/buy_now"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.786"
                        app:layout_constraintStart_toEndOf="@+id/shapeableImageViewHeater"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.342">

                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </View>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/homeActivityButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/icon_home_outlined_white">

        </ImageButton>

        <ImageButton
            android:id="@+id/myDevicesActivityButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/icon_squares_outlined_white"
            android:text="@string/devices"
            android:textColor="@color/black"
            android:textSize="14sp">

        </ImageButton>

        <Button
            android:id="@+id/storeActivityButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:backgroundTint="@color/lightest_button"
            android:drawableLeft="@drawable/icon_store_outlined_black"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/shopping"
            android:textColor="@color/black">

        </Button>

        <ImageButton
            android:id="@+id/myAccountActivityButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/icon_user_outlined_white">

        </ImageButton>


    </LinearLayout>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/icon_arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
