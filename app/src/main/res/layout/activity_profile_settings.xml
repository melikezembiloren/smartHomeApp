<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:id="@+id/main"
    android:layout_marginTop="25dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileSettingsActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/content_description_back_button"
        android:src="@drawable/icon_arrow_back_onsurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017">

    </ImageButton>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="PROFIL AYARLARI"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061">

    </TextView>


    <Button
        android:id="@+id/buttonAccountSettingsUpdateDisplayName"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/transparent"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:text="Kullanıcı adını değiştir"
        android:textAlignment="textStart"
        android:textColor="@color/onSurface"
        android:textSize="17sp">

    </Button>


    <Button
        android:id="@+id/buttonAccountSettingsUpdateEmail"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/transparent"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:text="E-posta adresini güncelle"
        android:textAlignment="textStart"
        android:textColor="@color/onSurface"
        android:textSize="17sp">

    </Button>

    <Button
        android:id="@+id/buttonAccountSettingsUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/transparent"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:text="Şifre Değiştir"
        android:textAlignment="textStart"
        android:textColor="@color/onSurface"
        android:textSize="17sp">

    </Button>


</LinearLayout>

</layout>
